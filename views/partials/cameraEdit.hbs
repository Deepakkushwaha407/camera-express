<section class="edit-camera">
    <h2>Edit Camera</h2>
    <div class="camera-selection">
        <h3>Select a Camera to Edit</h3>
        {{#if cameras.length}}
        <table>
            <thead>
                <tr>
                    <th>Megapixels</th>
                    <th>Sensor</th>
                    <th>Lens</th>
                    <th>Battery</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each cameras}}
                <tr>
                    <td>{{Pixel}} MP</td>
                    <td>{{Sensor}}</td>
                    <td>{{Lens}}</td>
                    <td>{{Battery}}</td>
                    <td>
                        <a href="/edit?pixel={{this.Pixel}}" class="edit-button">Select</a>
                        <form action="/delete" method="POST" style="display: inline;">
                            <input type="hidden" name="pixel" value="{{this.Pixel}}">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this camera?')">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p>No cameras available to edit.</p>
        {{/if}}
    </div>

    {{#if camera}}
    <form action="/update" method="POST">
        <input type="hidden" name="Pixel" value="{{camera.Pixel}}">
        {{> cameraForm formTitle="Edit Camera" buttonText="Update Camera" camera=camera}}
    </form>
    {{/if}}
</section>